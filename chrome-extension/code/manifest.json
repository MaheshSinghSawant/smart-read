{
  "name": "Ebook-UAA",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Ebook User Activity Assessment project - Chrome extension.",
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "page": "html/background.html"
  },
  "content_scripts": [
    {
	  "all_frames":true,
      "matches": ["<all_urls>"],
      "js": [
        "js/lib/require.js",
        "js/lib/jquery.js",
        "js/lib/underscore.js",
        "js/requireContent.js",
        "js/requireConfig.js",
        "js/content.js"
      ]
    }
  ],
  "permissions": [
      "http://*/",
      "tabs"
  ],
  "web_accessible_resources": [
    "js/*",
    "html/*",
    "css/*",
    "images/*"
  ]
}
